		//frame.add(new PixelCompGarmentsPanel(selectGarments(15,200)));
		//frame.add(new Comp3garmentsPanel(100));
		JButton refresh = new JButton("refresh");
		refresh.setMargin(new Insets(0,0,0,0));  
		refresh.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
				if(garmentsPanel!=null)panel.remove(garmentsPanel);
			//	garmentsPanel = new Comp3garmentsPanel(selectGarments(20));
				//panel.add(garmentsPanel);
				panel.revalidate();
				panel.repaint();
				
			}
		});
	
		
		panel.add(refresh);
		//frame.add(v);
		
	
		
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
	
	}
	
